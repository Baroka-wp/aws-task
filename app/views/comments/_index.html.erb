<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <p>
        <span><%= link_to "modifier", edit_blog_comment_path(blog, comment), remote: true %></span>
        <span><%= link_to "supprimer", blog_comment_path(comment.blog_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "Voulez-vous vraiment supprimer ?"} %></span>
        </p>
      </li>
    <% end %>
  <% end %>
</ul>
